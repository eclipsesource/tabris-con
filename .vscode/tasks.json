{
  "version": "2.0.0",
  "type": "shell",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "dedicated"
  },
  "tasks": [
    {
      "label": "Test (file)",
      "command": "npm run test:file ${file}",
      "group": "test"
    },
    {
      "label": "Lint (file)",
      "command": "npm run lint:file ${file}"
    },
    {
      "label": "Test (all)",
      "command": "npm test"
    },
    {
      "label": "Start",
      "command": "npm run start",
      "group": "build"
    },
    {
      "type": "npm",
      "script": "start",
      "problemMatcher": []
    }
  ]
}